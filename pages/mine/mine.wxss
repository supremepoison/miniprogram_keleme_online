.mine-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.logged-out {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 48rpx;
  min-height: calc(100vh - 200rpx);
}

.avatar-placeholder {
  width: 192rpx;
  height: 192rpx;
  border-radius: 50%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-desc {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-bottom: 64rpx;
  line-height: 1.5;
}

.login-button {
  width: 400rpx;
}

.logged-in {
  padding: 32rpx;
}

.user-profile {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.profile-header {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
}

.user-avatar-wrapper {
  position: relative;
  margin-right: 8rpx;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #9333ea);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.avatar-edit-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  background: #fff;
  border-radius: 50%;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.avatar-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  cursor: pointer;
  transition: opacity 0.2s;
}

.user-name:active {
  opacity: 0.6;
}

.stats {
  display: flex;
  justify-content: space-around;
  padding-top: 48rpx;
  border-top: 2rpx solid #f3f4f6;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #0052D9;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #999;
}

.gallery-section {
  margin-top: 48rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.image-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.image-wrapper {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.image-wrapper > image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.image-placeholder {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.gradient-1 {
  background: linear-gradient(135deg, #c084fc 0%, #ec4899 50%, #ef4444 100%);
}

.gradient-2 {
  background: linear-gradient(135deg, #22d3ee 0%, #3b82f6 50%, #9333ea 100%);
}

.gradient-3 {
  background: linear-gradient(135deg, #facc15 0%, #f97316 50%, #dc2626 100%);
}

.gradient-4 {
  background: linear-gradient(135deg, #374151 0%, #1f2937 50%, #111827 100%);
}

.image-info {
  padding: 24rpx;
}

.image-prompt {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
}

.upload-time {
  font-size: 24rpx;
  color: #ccc;
}

.like-info {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 24rpx;
}

.like-count {
  margin-left: 8rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-top: 32rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

.logout-section {
  margin-top: 48rpx;
  padding: 0 32rpx;
}

.logout-button {
  width: 100%;
}
