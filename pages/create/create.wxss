.create-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
  padding-bottom: 200rpx;
}

.not-generated,
.generated {
  display: flex;
  flex-direction: column;
}

.input-section {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.section-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.section-label text {
  margin-left: 8rpx;
}

.prompt-input {
  min-height: 240rpx !important;
}

.inspiration-button {
  margin-bottom: 48rpx;
}

.style-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.style-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.style-tag {
  margin: 0;
}

.negative-section {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.negative-input {
  min-height: 128rpx !important;
}

.generate-button {
  margin-bottom: 32rpx;
}

.tips-section {
  background: #eff6ff;
  border-radius: 24rpx;
  padding: 32rpx;
}

.tips-content {
  display: flex;
  align-items: flex-start;
}

.tips-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-left: 12rpx;
}

.generated-image {
  background: #ffffff;
  border-radius: 32rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.image-placeholder {
  width: 100%;
  height: 0;
  padding-bottom: 125%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-display {
  width: 100%;
  display: block;
}

.gradient-1 {
  background: linear-gradient(135deg, #c084fc 0%, #ec4899 50%, #ef4444 100%);
}

.prompt-display {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.prompt-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.prompt-label text {
  margin-left: 8rpx;
}

.prompt-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.regenerate-button,
.publish-button {
  flex: 1;
}

.save-draft-button {
  width: 100%;
}
