.preview-container {
  width: 100vw;
  height: 100vh;
  background: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.close-button {
  position: fixed;
  top: 60rpx;
  left: 32rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.download-button {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.9);
  border-radius: 100rpx;
  padding: 24rpx 48rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.download-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.prompt-info {
  position: fixed;
  bottom: 60rpx;
  left: 32rpx;
  right: 32rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
  z-index: 100;
}

.prompt-text {
  font-size: 26rpx;
  color: #fff;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
