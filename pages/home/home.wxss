.home-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 32rpx;
}

.image-card {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.image-wrapper {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.image-wrapper > image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.image-placeholder {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.gradient-1 {
  background: linear-gradient(135deg, #c084fc 0%, #ec4899 50%, #ef4444 100%);
}

.gradient-2 {
  background: linear-gradient(135deg, #22d3ee 0%, #3b82f6 50%, #9333ea 100%);
}

.gradient-3 {
  background: linear-gradient(135deg, #facc15 0%, #f97316 50%, #dc2626 100%);
}

.gradient-4 {
  background: linear-gradient(135deg, #374151 0%, #1f2937 50%, #111827 100%);
}

.gradient-5 {
  background: linear-gradient(135deg, #2dd4bf 0%, #10b981 50%, #0891b2 100%);
}

.gradient-6 {
  background: linear-gradient(135deg, #fb7185 0%, #ec4899 50%, #a855f7 100%);
}

.image-info {
  padding: 24rpx;
}

.image-prompt {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.user-info {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-default {
  background: linear-gradient(135deg, #3b82f6, #9333ea);
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: block;
}

.avatar-color-1 {
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
}

.avatar-color-2 {
  background: linear-gradient(135deg, #10b981, #059669);
}

.avatar-color-3 {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.avatar-color-4 {
  background: linear-gradient(135deg, #8b5cf6, #a855f7);
}

.avatar-color-5 {
  background: linear-gradient(135deg, #06b6d4, #0891b2);
}

.avatar-color-6 {
  background: linear-gradient(135deg, #f43f5e, #e11d48);
}

.avatar-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.author-name {
  font-size: 24rpx;
  color: #333;
  margin-left: 12rpx;
  flex: 1;
}

.upload-time {
  font-size: 20rpx;
  color: #ccc;
}

.loading-more {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
}

.no-more {
  text-align: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-top: 32rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: center;
}
